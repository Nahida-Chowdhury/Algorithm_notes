#include<bits/stdc++.h>
using namespace std;
 
int minimum(int a,int b)
{
    if(a<b)
        return a;
    else 
        return b;
}

int mincoinchange(int coins[],int numcoins,int amount)
{
    int dp[numcoins][amount+1];
    for(int i=0;i<numcoins;i++)
    {
        dp[i][0] = 0;
    }
    
    for(int i=0;i<numcoins;i++)
    {
        for(int j=1;j<=amount;j++)
        {
            if(coins[i] > j)
                dp[i][j] = dp[i-1][j];
            else
                dp[i][j] = minimum((1+dp[i][j- coins[i]]),dp[i-1][j]);
        }
    }
    return dp[numcoins-1][amount];
}

int main()
{
    int coins[] = {1,3,5};
    int numcoins= 3;
    int amount = 10;
    cout<<"Number of ways to make change: "<<mincoinchange(coins,numcoins,amount)<<endl;
}
